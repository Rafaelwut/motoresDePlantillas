<h3 class="text-start mt-5 mb-5 fw-bolder text-primary">Listado de Productos</h3>

<% if (productos.length > 0) { %>
<div class="table-responsive">
  <table class="table table-dark table-hover container">
    <thead>
      <tr>
        <th>ID</th>
        <th>Producto</th>
        <th>Precio</th>
        <th>Imagen</th>
      </tr>
    </thead>
    <tbody>
      <% productos.forEach(item => { %>
      <tr>
        <th><%= item.id %></th>
        <th><%= item.title %></th>
        <th><%= item.price %></th>
        <th>
          <img width="30" height="30" src="<%=item.thumbnail %>" alt="image" />
        </th>
      </tr>
      <% }) %>
    </tbody>
  </table>
  <a href="/" class="btn btn-info mt-3 mb-5"> Volver al formulario </a>
</div>
<% } else { %>
<h3 class="alert alert-danger">No se encontraron productos</h3>
<a href="/" class="btn btn-info mt-3 mb-5"> Volver al formulario </a>
<% } %>